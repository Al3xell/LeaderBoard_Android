<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirebaseUI">

  <ImageView
      android:id="@+id/Logo"
      android:layout_width="118dp"
      android:layout_height="113dp"
      android:layout_marginTop="@dimen/topLogo"
      android:contentDescription="Logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/googleg_standard_color_18"
      tools:ignore="HardcodedText" />

  <Button
      android:id="@+id/signInGoogle"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:backgroundTint="@color/light"
      android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
      android:text="@string/fui_sign_in_with_google"
      android:textColor="@color/dark"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/button2"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="@+id/button2"
      app:layout_constraintTop_toBottomOf="@+id/Logo"
      app:layout_constraintVertical_bias="0.47000003"
      tools:ignore="RtlHardcoded" />

  <Button
      android:id="@+id/button2"
      android:layout_width="271dp"
      android:layout_height="76dp"
      android:drawableLeft="@drawable/fui_ic_mail_white_24dp"
      android:text="@string/fui_sign_in_with_email"
      app:layout_constraintBottom_toTopOf="@+id/signInGoogle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Logo"
      app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>